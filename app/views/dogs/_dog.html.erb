<div class="col-sm-12 col-lg-4 mb-3">
  <div id="dog-id-<%= dog.id %>">
    <div class="card">
      <%= image_tag "dog_image/#{dog.id}.jpeg", class: 'card-img-top', size: '300x300' %>
      <div class="card-body">
        <h4 class="card-title">
          <%= link_to dog.breed, dog_path(dog) %>
        </h4>
      </div>
    </div>
  </div>
</div>